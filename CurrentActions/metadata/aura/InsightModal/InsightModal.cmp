<aura:component controller="InsightsController">

    <ltng:require styles="/resource/DataTables/datatables.css,/resource/SLDS0122/assets/styles/salesforce-lightning-design-system-ltng.css" scripts="/resource/DataTables/datatables.js" afterScriptsLoaded="{!c.postScript}" />

    <aura:registerEvent name="modal_close" type="c:modalClose"/>
    <aura:attribute name="insight" type="Insight__c" />
    <aura:attribute name="rows" type="List" />
    <aura:attribute name="headers" type="List" />

    <aura:handler name="init" value="{!this}" action="{!c.doInit}" />

    <div class="slds">

        <div aria-hidden="false" role="dialog" class="slds-modal slds-fade-in-open">
            <div class="slds-modal__container">

                <div class="slds-modal__header">
                    <h2 class="slds-text-heading--medium">{!v.insight.Data_Source__c}</h2>
                </div>
                <div class="slds-modal__content">


                    <table id="example" class="display slds-table slds-table- -bordered" width="100%"></table>

                       <!--     <table class="slds-table slds-table- -bordered">
                               <tbody>
                                  <aura:iteration items="{!v.rows}" var="row">
                                  <tr>
                                     <aura:iteration items="{!row.dataCells}" var="cell">
                                     <td> <a href="{!cell.value}">{!cell.label}</a></td>
                                 </aura:iteration>
                             </tr>
                         </aura:iteration>


                     </tbody>
                 </table>   -->


                </div>
                <div class="slds-modal__footer">
                    <div class="slds-x-small-buttons--horizontal">
                        <button class="slds-button slds-button--neutral" onclick="{!c.close}">Cancel</button>
                        <button class="slds-button slds-button--neutral slds-button--brand" onclick="{!c.close}">Save</button>

                    </div>
                </div>
            </div>
        </div>
        <div class="slds-backdrop slds-backdrop--open"></div>
    </div>
</aura:component>